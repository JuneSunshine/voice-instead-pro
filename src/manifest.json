{
  "name": "Voice Instead",
  "version": "17.12.16.46",
  "manifest_version": 2,

  "description": "Yet another TTS (text to speech) extension, with natural voice.",

  "icons": {
	  "48": "icon48.png",
	  "128": "icon.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon36.png"
    },
    "default_title": "Voice Instead Options",
    "default_popup": "popup.html"
  },

	"commands": {
		"speak-selected-text": {
			"suggested_key": {
				"mac": "Command+Z",
				"default": "Ctrl+Z"
			},
			"description": "Speak selected text"
		}
	},

  "content_scripts": [{
	"matches": ["<all_urls>"],
	"css": ["ui.css"],
	"all_frames": false,
	"js": ["jquery.min.js", "content.js"]
  }],

  "background": {
    "scripts": ["config.js", "background.js"]
  },

  "web_accessible_resources": [
    "fa-play.png",
    "fa-pause.png",
    "fa-stop.png",
    "loader.gif"
  ],

  "permissions": [
    "tabs",
	"contextMenus",
	"background",
    "<all_urls>",
	"webRequest",
    "webRequestBlocking",
    "storage"
  ]
}
